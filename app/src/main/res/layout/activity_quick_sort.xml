<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nearur.daa.QuickSort">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.nearur.daa.QuickSort">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            tools:context="com.nearur.daa.QuickSort">

            <TextView
                android:id="@+id/textView5"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="48dp"
                android:textColor="@color/colorPrimary"
                android:text="Quick Sort" />

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/editTextquicklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Enter List(Comma Seperated)" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/textViewquickresult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/colorPrimary"
                android:visibility="gone"
                android:text="TextView" />

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/buttonquick"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quick Sort" />

            <CheckedTextView
                android:layout_marginTop="10dp"
                android:id="@+id/checkedTextViewalgoquick"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:text="CheckedTextView" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>